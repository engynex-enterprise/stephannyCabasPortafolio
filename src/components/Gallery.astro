---
const categories = ['Todos', 'Eventos', 'Sesiones', 'Campanas'];

const galleryItems = [
  { id: 1, category: 'Eventos', gradient: 'from-primary/30 to-purple/30', label: 'Evento Corporativo' },
  { id: 2, category: 'Sesiones', gradient: 'from-secondary/30 to-primary/30', label: 'Sesion Fotografica' },
  { id: 3, category: 'Campanas', gradient: 'from-purple/30 to-secondary/30', label: 'Campana Publicitaria' },
  { id: 4, category: 'Sesiones', gradient: 'from-accent/30 to-primary/30', label: 'Editorial de Moda' },
  { id: 5, category: 'Eventos', gradient: 'from-primary/30 to-accent/30', label: 'Lanzamiento de Marca' },
  { id: 6, category: 'Campanas', gradient: 'from-secondary/30 to-purple/30', label: 'Campana Digital' },
  { id: 7, category: 'Sesiones', gradient: 'from-purple/30 to-accent/30', label: 'Lookbook' },
  { id: 8, category: 'Eventos', gradient: 'from-accent/30 to-secondary/30', label: 'Feria Comercial' },
];
---

<section id="galeria" class="py-20 md:py-32 bg-gray-50 relative overflow-hidden">
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary/5 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <!-- Section Title -->
    <div class="text-center mb-16 fade-up">
      <p class="text-primary font-medium tracking-widest uppercase text-sm mb-3">Mi Trabajo</p>
      <h2 class="text-4xl md:text-5xl font-display font-bold text-dark">
        <span class="gradient-text">Galeria</span>
      </h2>
    </div>

    <!-- Filter Buttons -->
    <div class="flex flex-wrap justify-center gap-3 mb-12 fade-up">
      {categories.map((cat, i) => (
        <button
          data-filter={cat === 'Todos' ? 'all' : cat.toLowerCase()}
          class:list={[
            'filter-btn px-6 py-2.5 rounded-full text-sm font-medium transition-all duration-300',
            i === 0
              ? 'bg-gradient-to-r from-primary to-purple text-white shadow-lg shadow-primary/25 active'
              : 'bg-white text-dark/70 hover:text-primary border border-gray-200 hover:border-primary/30'
          ]}
        >
          {cat}
        </button>
      ))}
    </div>

    <!-- Gallery Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 stagger-children" id="gallery-grid">
      {galleryItems.map((item, i) => (
        <div
          class:list={[
            'gallery-item scale-in group relative rounded-xl overflow-hidden cursor-pointer',
            i === 0 || i === 5 ? 'sm:col-span-2 sm:row-span-2' : '',
          ]}
          data-category={item.category.toLowerCase()}
          data-index={item.id}
        >
          <div class:list={[
            'bg-gradient-to-br aspect-square w-full',
            item.gradient,
          ]}>
            <div class="w-full h-full flex items-center justify-center">
              <div class="text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-dark/20 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="text-dark/30 text-xs">{item.label}</p>
              </div>
            </div>
          </div>

          <!-- Hover Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-dark/80 via-dark/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-end">
            <div class="p-5 w-full transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
              <p class="text-white font-display text-lg font-semibold">{item.label}</p>
              <p class="text-white/70 text-sm">{item.category}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Lightbox -->
  <div id="lightbox" class="lightbox-overlay">
    <button class="lightbox-close" aria-label="Cerrar">&times;</button>
    <div class="bg-gradient-to-br from-primary/30 to-purple/30 rounded-lg flex items-center justify-center" style="width: 80vw; max-width: 800px; height: 60vh;">
      <p class="text-dark/40 text-lg" id="lightbox-label">Imagen</p>
    </div>
  </div>
</section>

<script>
  // Filter functionality
  const filterBtns = document.querySelectorAll('.filter-btn');
  const galleryItems = document.querySelectorAll('.gallery-item');

  filterBtns.forEach((btn) => {
    btn.addEventListener('click', () => {
      const filter = btn.getAttribute('data-filter');

      // Update active button
      filterBtns.forEach((b) => {
        b.classList.remove('bg-gradient-to-r', 'from-primary', 'to-purple', 'text-white', 'shadow-lg', 'shadow-primary/25', 'active');
        b.classList.add('bg-white', 'text-dark/70', 'border', 'border-gray-200');
      });
      btn.classList.remove('bg-white', 'text-dark/70', 'border', 'border-gray-200');
      btn.classList.add('bg-gradient-to-r', 'from-primary', 'to-purple', 'text-white', 'shadow-lg', 'shadow-primary/25', 'active');

      // Filter items
      galleryItems.forEach((item) => {
        const category = item.getAttribute('data-category');
        if (filter === 'all' || category === filter) {
          (item as HTMLElement).style.display = '';
          item.classList.add('scale-in', 'visible');
        } else {
          (item as HTMLElement).style.display = 'none';
        }
      });
    });
  });

  // Lightbox
  const lightbox = document.getElementById('lightbox');
  const lightboxLabel = document.getElementById('lightbox-label');
  const lightboxClose = document.querySelector('.lightbox-close');

  galleryItems.forEach((item) => {
    item.addEventListener('click', () => {
      const label = item.querySelector('p.text-dark\\/30, p.text-dark\\/40')?.textContent || 'Imagen';
      if (lightboxLabel) lightboxLabel.textContent = label;
      lightbox?.classList.add('active');
      document.body.style.overflow = 'hidden';
    });
  });

  lightboxClose?.addEventListener('click', () => {
    lightbox?.classList.remove('active');
    document.body.style.overflow = '';
  });

  lightbox?.addEventListener('click', (e) => {
    if (e.target === lightbox) {
      lightbox.classList.remove('active');
      document.body.style.overflow = '';
    }
  });

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      lightbox?.classList.remove('active');
      document.body.style.overflow = '';
    }
  });
</script>
